<link rel="stylesheet" type="text/css" href="/css/dashboard.css">

<div class="dashboard-container">
<div class="studentlist-container">
  <%- include('student') -%>
  <br>
  <br>

  <table class="table table-dark table-bordered table-striped">
  
  <thead>
    <tr>
      <th scope="col">Batch</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Contact</th>
      <th scope="col">DSA</th>
      <th scope="col">WEB</th>
      <th scope="col">React</th>
      <th scope="col">college</th>
      <th scope="col">Status</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
   <% for (let student of students)
    {%>
      <tr>
      <td><%= student.batch%></td>
      <td><%= student.name %></td>
      <td><%= student.email %></td>
      <td><%= student.phoneNumber %></td>
      <td><%= student.dsaScore %></td>
      <td><%= student.reactScore %></td>
      <td><%= student.webdScore %></td>
      <td><%= student.college %></td>
      <td><%= student.status %></td>
      <td><a href="/student/edit/<%= student.id %>"> Edit</a>
          <a href="/student/destroy/<%= student.id %>" onclick="return confirm('Are you sure you want to delete this student?')">Delete</a>
      </td>
      </tr>
    <%}%>

  </tbody>
</table>
</div>

<div class="interview-container">
  <div class="interview-button">
    <%- include('interview') -%>
    <%- include('allocateStudent') -%>
  </div>   
 
  
  <br><br>


<table class="table table-dark table-bordered table-striped">
  <thead>
    <tr>
    <th scope="col">Company</th>
    <th scope="col">Date of visit</th>
    <th scope="col">allotted Student</th>
    <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
      <%for(let interview of interviews)
      {%>
        <tr>
        <td scope="row"><%= interview.company %></td>
        <td scope="row"><%=interview.visitDate %></td>
        <td scope="row"> <a href="/interview/allocate/<%= interview.id %>">student-list</a></td>
        <td scope="row"><a href="/interview/destroy/<%= interview.id %>"><i class="fa-solid fa-delete-left" style="color: #8b0909;"></i></a>
       
        </td>
        
        </tr>
      <%}%>
  </tbody>
</table>
</div>
</div>
